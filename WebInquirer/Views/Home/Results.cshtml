@model IEnumerable<WebInquirer.Models.Tests>

@{
    ViewBag.Title = "Результаты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Результаты</h2>

<table class="table table-striped">
<thead>
    <tr>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th class="col-lg-3"></th>
    </tr>
</thead>

<tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.name
            </td>
            <td>
                @item.description
            </td>
            <td>
                <a class="btn btn-default" href="@Url.Action("View", new { id = item.id })">Просмотреть</a>
                <a class="btn btn-danger" href="@Url.Action("Remove", new { id = item.id })">Удалить</a>
            </td>
        </tr>
    }
</tbody>

</table>